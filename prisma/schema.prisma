// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dimension {
  id Int @id @default(autoincrement())
  name String 
  value Float
  size Size? @relation(fields: [sizeId], references: [id])
  sizeId Int
}

model Size {
  id Int @id @default(autoincrement())
  name String
  dimensions Dimension[]
  cloth Cloth? @relation(fields: [clothId], references: [id])
  clothId Int
}

model Cloth {
  id Int @id @default(autoincrement())
  name String
  model String
  price Float
  sizes Size[]
  category String
  genre Genre
  type Type
}

enum Type {
  TSHIRT
  PANT
  SHOES
  SOCKS
  UNDERWEAR
}

enum Genre {
  FEMININE
  MASCULINE
}
