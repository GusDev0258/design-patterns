{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                                
    "rootDir": "./src",
    "outDir": "./dist",                                  
    "baseUrl": "./src",                                  
    "esModuleInterop": true,                             
    "strict": true,    
    "resolveJsonModule": true,       
    "isolatedModules": true,                               
    "skipLibCheck": true                                 
  },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
